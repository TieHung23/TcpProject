@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-4">
    <h2 class="text-center">TCP Client</h2>

    @if (!Model.Connected)
    {
        <form method="post">
            <div class="mb-3">
                <label for="ip" class="form-label">Server IP</label>
                <input type="text" name="Ip" class="form-control" value="@Model.Ip" placeholder="127.0.0.1" />
            </div>

            <div class="mb-3">
                <label for="port" class="form-label">Port</label>
                <input type="number" name="Port" class="form-control" value="@Model.Port" placeholder="2000" />
            </div>

            <div class="mb-3">
                <label for="name" class="form-label">Your Name</label>
                <input type="text" name="Name" class="form-control" value="@Model.Name" placeholder="Enter your name" />
            </div>

            <button type="submit" class="btn btn-primary">Check Connection</button>
        </form>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger mt-3">@Model.ErrorMessage</div>
        }
    }
    else
    {
        <h4 class="text-success">Connected as @Model.Name to @Model.Ip:@Model.Port</h4>

        <form method="post" action="/Chat/SendMessage">
            <div class="mb-3">
                <label for="message" class="form-label">Message</label>
                <input type="text" name="Message" class="form-control" placeholder="Type your message..." />
            </div>
            <button type="submit" class="btn btn-success">Send</button>
        </form>
    }
</div>